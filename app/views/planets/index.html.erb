<p id="notice"><%= notice %></p>

<h1 class="text-center">Planets</h1>

<div class="table-responsive">
<table class= "table table-bordered border-dark">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planets.each do |planet| %>
      <tr>
        <td><%= planet.name %></td>
        <td><%= link_to 'Show', planet %></td>
        <td><%= link_to 'Edit', edit_planet_path(planet) %></td>
        <td><%= link_to 'Destroy', planet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<button type="button" class="btn btn-dark "><%= link_to 'New Planet', new_planet_path %></button>
