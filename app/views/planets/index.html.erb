<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="card">
    <div class="card-header d-flex bd-highlight">
      <div class="me-auto pt-1 pb-0 bd-highlight"><h3>Planetas</h3></div>
      <div class="pt-1 pb-0 bd-highlight"><%= link_to 'Novo',new_planet_path, class: "btn btn-primary ps-4 pe-4 pt-1 pb-1"%></div>
    </div>

    <div class="card-body">
      <div class="d-flex bd-highlight">
        <table class= "table table-striped">
          <thead class="table-light">
            <tr>
              <th>Nome</th>
              <th></th>
              <th colspan="3">Ações</th>
            </tr>
          </thead>

          <tbody>
          <% @planets.each do |planet| %>
            <tr>
              <td><%= planet.name %></td>
              <td><%= link_to 'Ver', planet, class: "btn btn-success ps-4 pe-4 pt-0 pb-0"%></td>
              <td><%= link_to 'Editar', edit_planet_path(planet), class: "btn btn-warning ps-3 pe-3 pt-0 pb-0"%></td>
              <td><%= link_to 'Deletar', planet, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-danger ps-2 pe-2 pt-0 pb-0"%></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <%= paginate @planets%>
    </div>
  </div>
</div>
