<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="card">
    <div class="card-header d-flex bd-highlight">
      <div class="me-auto p-2 bd-highlight"><h3>Aliens</h3></div>
      <div class="p-2 bd-highlight"><%= link_to 'New Alien',new_alien_path, class: "btn btn-primary"%></div>
    </div>

  <div class="card-body">
    <div class="d-flex bd-highlight">
    <table class= "table table-striped">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Planet</th>
          <th>Power</th>
          <th></th>
          <th colspan="3">Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @aliens.each do |alien| %>
        <tr>
          <td><%= alien.name %></td>
          <td><%= alien.age %></td>
          <td><%= alien.planet.name %></td>
          <td><%= alien.powers.pluck(:name).join(",")  %></td>
          <td><%= link_to 'Show', alien, class: "btn btn-success mx-0"%></td>
          <td><%= link_to 'Edit', edit_alien_path(alien), class: "btn btn-warning mx-0" %></td>
          <td><%= link_to  'Destroy', alien, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mx-0" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>  
  </div>
</div>
